{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "lint": {
            "outputs": [],
            "cache": true,
            "dependsOn": [
                "^lint"
            ],
            "inputs": [
                "apps/registry/src/**/*.{ts,tsx,js,jsx,json}",
                "apps/web/src/**/*.{ts,tsx,js,jsx,json}"
            ]
        },
        "lint:fix": {
            "outputs": [],
            "cache": false,
            "dependsOn": [
                "^lint:fix"
            ],
            "inputs": [
                "apps/registry/src/**/*.{ts,tsx,js,jsx,json}",
                "apps/web/src/**/*.{ts,tsx,js,jsx,json}"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}